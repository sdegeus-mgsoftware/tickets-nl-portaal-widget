{
  "name": "tickets-widget",
  "version": "1.0.0",
  "description": "Embeddable support widget for ticket creation",
  "main": "dist/widget.js",
  "scripts": {
    "dev": "webpack serve --mode development --open",
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "build:cdn": "npm run build && npm run copy-cdn",
    "copy-cdn": "cp dist/* cdn/v1/ && cp dist/* cdn/latest/",
    "deploy": "npm run build:cdn && gh-pages -d cdn",
    "serve": "node test-server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "clean": "rm -rf dist cdn/v1/* cdn/latest/*"
  },
  "keywords": [
    "support",
    "widget",
    "tickets",
    "help",
    "customer-support"
  ],
  "author": "Your Company",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "css-loader": "^6.8.0",
    "eslint": "^8.45.0",
    "gh-pages": "^6.0.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^29.5.0",
    "mini-css-extract-plugin": "^2.7.0",
    "postcss": "^8.4.0",
    "postcss-loader": "^7.3.0",
    "postcss-preset-env": "^9.0.0",
    "sass": "^1.65.0",
    "sass-loader": "^13.3.0",
    "style-loader": "^3.3.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.0",
    "typescript": "^5.1.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^4.15.0"
  },
  "dependencies": {
    "html2canvas": "^1.4.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourcompany/tickets-widget.git"
  },
  "files": [
    "dist/**/*",
    "cdn/**/*",
    "README.md"
  ]
}
